/**index.wxss**/
page{ background:#F6F2E9; }
.mar-t30vh{margin-top:30vh;}
.cells > .weui-cells{
  background-color: transparent;
}
.cells > .weui-cells:after, .cells > .weui-cells:before{
  border:none;
}
.input-box,.login-butt{
  box-sizing: border-box;
  width:90% !important;
  margin-left:5%;
  padding:5px 10px;
  border-radius: 3px;
}
.input-box{
  border:1px solid #ddd;
  box-shadow: 2px 2px 5px #ccc;
  margin-bottom:20rpx;
  display: flow-root;
}
.login-butt{
  background-image: linear-gradient(rgb(111,176,96), rgb(91,158,78));
  text-align: center;
  color:#fff;
}